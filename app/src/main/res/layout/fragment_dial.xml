<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_weight="1"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context="com.sss.jjcombs.finalactdials.Dial">


        <Button
            android:layout_height="@dimen/upper_button_size"
            android:layout_width="@dimen/upper_button_size"
            android:layout_row="2"
            android:layout_column="2"
            android:id="@+id/button_se"
            android:alpha = "0" />

        <Button
            android:layout_height="@dimen/upper_button_size"
            android:layout_width="@dimen/upper_button_size"
            android:layout_row="2"
            android:layout_column="1"
            android:id="@+id/button_s"
            android:alpha = "0" />

        <Button
            android:layout_height="@dimen/upper_button_size"
            android:layout_width="@dimen/upper_button_size"
            android:layout_row="2"
            android:layout_column="0"
            android:id="@+id/button_sw"
            android:alpha = "0" />

        <Button
            android:layout_height="@dimen/upper_button_size"
            android:layout_width="@dimen/upper_button_size"
            android:layout_row="1"
            android:layout_column="2"
            android:id="@+id/button_e"
            android:alpha = "0" />

        <Button
            android:layout_height="@dimen/upper_button_size"
            android:layout_width="@dimen/upper_button_size"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/button_w"
            android:alpha = "0" />

        <Button
            android:layout_height="@dimen/upper_button_size"
            android:layout_width="@dimen/upper_button_size"
            android:layout_row="0"
            android:layout_column="2"
            android:id="@+id/button_ne"
            android:alpha = "0" />

        <Button
            android:layout_height="@dimen/upper_button_size"
            android:layout_width="@dimen/upper_button_size"
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/button_n"
            android:alpha = "0" />

        <Button
            android:layout_height="@dimen/upper_button_size"
            android:layout_width="@dimen/upper_button_size"
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/button_nw"
            android:alpha = "0" />

        <ImageView
            tools:ignore="ContentDescription"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:layout_rowSpan="3"
            android:id="@+id/image_u"
            android:layout_height="@dimen/upper_dial_size"
            android:layout_width="@dimen/upper_dial_size"/>
    </GridLayout>

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context="com.sss.jjcombs.finalactdials.Dial">
        <Button
            android:layout_height="@dimen/upper_button_size"
            android:layout_width="@dimen/upper_button_size"
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/button_nw_l"
            android:alpha = "0" />
        <Button
            android:layout_height="@dimen/upper_button_size"
            android:layout_width="@dimen/upper_button_size"
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/button_n_l"
            android:alpha = "0" />
        <Button
            android:layout_height="@dimen/upper_button_size"
            android:layout_width="@dimen/upper_button_size"
            android:layout_row="0"
            android:layout_column="2"
            android:id="@+id/button_ne_l"
            android:alpha = "0" />
        <Button
            android:layout_height="@dimen/upper_button_size"
            android:layout_width="@dimen/upper_button_size"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/button_w_l"
            android:alpha = "0" />
        <Button
            android:layout_height="@dimen/upper_button_size"
            android:layout_width="@dimen/upper_button_size"
            android:layout_row="1"
            android:layout_column="2"
            android:id="@+id/button_e_l"
            android:alpha = "0" />
        <ImageView
            tools:ignore="ContentDescription"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:layout_rowSpan="3"
            android:id="@+id/image_l"
            android:layout_height="@dimen/upper_dial_size"
            android:layout_width="@dimen/upper_dial_size"/>
    </GridLayout>

    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="@dimen/lower_button_size"
        android:layout_height="@dimen/lower_button_size"
        android:textStyle="bold"
        android:id="@+id/bottom_label"/>

</LinearLayout>
